{
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*",
    "activeTab",
    "notifications"
  ],
  "name": "Page Note",
  "description": "页面笔记",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery-3.2.1.min.js", "checked.js"]
    }
  ]
}